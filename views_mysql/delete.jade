doctype html
html
  head
    meta(charset='UTF-8')
  body
    h1
      a(href='/home') Client Management System
    ul
      each company in companies
        li
          a(href='/home/'+company.id)= company.companyName
    article
      h1= 'Do you really want to delete '+company.companyName
      form(action='/home/'+company.id+'/delete' method='post')
        p
          input(type='submit' value='YES')
      a(href='/home/'+company.id) no
